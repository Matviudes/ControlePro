@model IEnumerable<Produto>

@{
    ViewData["Title"] = "Adicionar Produto";

    var venda = ViewBag.Venda as Venda ?? new();
}

<div class="d-flex flex-column">
    <div class="d-flex justify-content-between align-items-end">
        <h1>@ViewData["Title"]</h1>
    </div>

    <hr />

    <form class="input-group">
        <input type="search" class="form-control" placeholder="Procurar" name="search" />
        <input type="submit" class="btn btn-primary" value="Buscar" />
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-3" role="alert">
            Nenhum produto encontrado.
        </div>
    }
    else
    {
        <table class="table table-hover my-2">
            <thead>
                <tr>
                    <th scope="col" class="col-1">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>

                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>

                    <th scope="col" class="col-1">
                        @Html.DisplayNameFor(model => model.Quantidade)
                    </th>

                    <th scope="col" class="col-1">
                        @Html.DisplayNameFor(model => model.PrecoVenda)
                    </th>

                    <th scope="col" class="col-2">
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Model)
                {
                    <tr>
                        <td scope="row">
                            @Html.DisplayFor(item => produto.Id)
                        </td>

                        <td>
                            @Html.DisplayFor(item => produto.Nome)
                        </td>

                        <td>
                            @Html.DisplayFor(item => produto.Quantidade)
                            @Html.DisplayFor(item => produto.Unidade.Sigla)
                        </td>

                        <td>
                            @Html.DisplayFor(item => produto.PrecoVenda)
                        </td>

                        <td>
                            @Html.ActionLink("Adicionar", "AddProdutoTo", new { idVenda = venda.Id, idProduto = produto.Id }, new { @class = "btn btn-outline-primary py-0" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @Html.ActionLink("Voltar", "Edit", new { id = venda.Id }, new { @class = "btn btn-primary" })
</div>